{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": false,
    "isolatedModules": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~lib/*": [
        "src/lib/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~api/*": [
        "src/api/*"
      ],
      "~assets/*": [
        "src/assets/*"
      ],
      "~mock/*": [
        "src/mock/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
